<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Scheduler", root_path, :class => "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li class="<%= controller_name == 'registrations' ? 'active' : '' %>"><%= link_to 'Profile', edit_user_registration_path %></li>
            <li><%= link_to "Logout", xero_session_destroy_path %></li>
            <li><%= link_to "Sync", synchronize_contacts_path %></li>
            <li class="<%= controller_name == 'time_slots' ? 'active' : '' %>"><%= link_to 'T.Slots', time_slots_path %></li>
            <li class="<%= controller_name == 'contacts' && action_name == 'index' ? 'active' : '' %>"><%= link_to "Contacts", contacts_path %></li>
        <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
        <li class="<%= controller_name == 'services' ? 'active' : '' %>"><%= link_to 'Services', services_path %></li>

        <% if user_signed_in? %>
            <li class="<%= controller_name == 'events' ? 'active' : '' %>"><%= link_to "Events", events_path %></li>
        <% end %>

        <li class="<%= controller_name == 'calendar' ? 'active' : '' %>"><%= link_to 'Calendar', calendar_path%></li>
       <% if !user_signed_in? %>
            <li class="<%= controller_name == 'contacts' && action_name == 'new'  ? 'active' : '' %>"><%= link_to 'Your Info', new_contact_path %></li>
            <li class="<%= controller_name == 'pages' && action_name == 'confirmation'  ? 'active' : '' %>"><%= link_to "Confirmation", confirmation_path %></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>
